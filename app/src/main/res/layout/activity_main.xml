<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="12dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.fauji.commaseparated.widget.CommaSeparatedEditText
        android:id="@+id/commaSeparatedEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isSeparateByCommas="true"
        app:layout_constraintTop_toTopOf="parent"
        app:noOfDecimals="2" />

    <TextView
        android:id="@+id/withOutCommaText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/commaSeparatedEditText" />

    <TextView
        android:id="@+id/WithCommaText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/withOutCommaText" />

</androidx.constraintlayout.widget.ConstraintLayout>